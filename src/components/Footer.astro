---
import siteConfig from "../site-config";

const navLinks = siteConfig.footerNavLinks || [];
---

<footer class="w-full px-6 pt-4 pb-12 max-w-3xl mx-auto text-sm opacity-60">
  {
    navLinks.length > 0 && (
      <div class="mb-4 flex flex-wrap justify-center gap-4 gap-y-1">
        {navLinks.map((link) => (
          <a class="nav-link" href={link.href}>
            {link.text}
          </a>
        ))}
      </div>
    )
  }
  <div class="flex flex-wrap justify-center text-dark dark:text-white">
    <span class="opacity-70">2023-PRESENT Â©</span>
    <a class="!nav-link opacity-100 ml-1" href="/">{siteConfig.author}</a>
  </div>
</footer>
